{% extends 'partials/_master.twig' %}
{% block main %}
    <div class="article-content">
    {% if not record.private or user is not empty %}
          <h1 class="article-title">{{ record.title }}</h1>
              {{ record.body|headerids }}
          <div>
            <ul>
              <li>Path: {{ record.path }}</li>
              <li>Created on: {{ record.datecreated }}</li>
              <li>Last changed on: {{ record.datechanged }}</li>
            </ul>
          </div>
    {% else %}
        You need to be logged in to see this wiki article.
    {% endif %}
    </div>


{% endblock %}
